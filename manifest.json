{
  "manifest_version": 2,
  "name": "Sidebar Test",
  "version": "0.1",

  "description": "Test Sidebar Toggling",

  "icons": {
    "32": "icon-32.png"
  },

  "browser_action": {
    "default_icon": "icon-32.png",
    "default_title": "Open Sidebar"
  },

  "sidebar_action": {
    "default_icon": {
      "32": "icon-32.png"
    },
    "default_title": "My sidebar",
    "default_panel": "sidebar.html",
    "open_at_install": false
  },

  "background": {
    "scripts": ["background.js"]
  }

}